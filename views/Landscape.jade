		script(type='text/javascript').
				if (window.screenTop && window.screenY) {
				
						var win = window.open("", "full", "dependent=yes, fullscreen=yes"); 
						win.location = window.location.href; 
						window.opener = null; 
						window.open('','_parent','');
						//window.close();
					
