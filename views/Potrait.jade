				div
					img(u="image", src="/images/04.jpg")
				div
					img(u="image", src="/images/05.jpg")
		div(style="float:auto;margin-top:-15px;margin-left:-8px;")
			img#LocationSpecific1(src="/images/Lighthouse.jpg")
